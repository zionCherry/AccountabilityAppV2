<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidappv2">
    <!--The section below is responsible for creating the pages/ activities that will be cycled through by the app-->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidAppV2">
        <activity
            android:name=".how_to_use_page"
            android:exported="true" />
        <activity
            android:name=".resources_page"
            android:exported="true" />
        <activity
            android:name=".goal_submission_page"
            android:exported="true" />
        <activity
            android:name=".view_button_page"
            android:exported="true" />
        <activity
            android:name=".find_button_page"
            android:exported="true" />
        <activity
            android:name=".Create_Button_Page"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".view_team_button"
            android:exported="true" />
        <activity
            android:name=".splash"
            android:exported="true">
            <intent-filter>
                <!--The section below is responsible for the apps main and launcher So we should not mess with the below section-->
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>